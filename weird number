#include <iostream>

using namespace std;

int main()
{
    int n;
    cin>>n;
    int temp=n;
    cout<<temp<<" ";
    while(temp>1)
    {
        cout<<temp<<" ";// printing weird number series
        if(temp%2==0)   //even number
                temp=temp/2;
        else            //odd number
            temp=(temp*3)+1;
    }
    cout<<temp;
    return 0;
}
